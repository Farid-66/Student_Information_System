@model PreSkool_project.Models.Holiday

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 page_title">
                    <div>
                        <h2>Edit Holiday</h2>
                    <p class="d-none d-sm-block"><a asp-controller="holidays" asp-action="index">Holiday</a> / Edit Holiday</p>
                    </div>
                </div>
            </div>
    
            <div class="row">
                <div class="col-12">
                    <div class="card_body">
                        <form asp-controller="holidays" asp-action="Edit" method="post">
                            <div class="row">
                                <div class="col-12">
                                    <h2><span>Holiday Information</span></h2>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <label asp-for="Name" class="form-label">Holiday Name</label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <label asp-for="HolidayTypeId" class="form-label">Type of Holiday</label>
                                    <select asp-for="HolidayTypeId" class ="form-control" asp-items="ViewBag.HolidayTypeId">
                                        <option selected disabled>Select Holiday Type</option>
                                    </select>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <label asp-for="StartDate" class="form-label">Start Date</label>
                                    <input asp-for="StartDate" type="date" class="form-control" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <label asp-for="EndDate" class="form-label">End Date</label>
                                    <input asp-for="EndDate" type="date" class="form-control" />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>
                            <input type="hidden" asp-for="Id" />
                            <input asp-for="CreatedDate" hidden />
                            <button type="submit" class="btn btn_submit">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

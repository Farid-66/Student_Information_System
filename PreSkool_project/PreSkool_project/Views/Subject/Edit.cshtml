@model PreSkool_project.Models.Subject

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 page_title">
                    <div>
                        <h2>Edit Subject</h2>
                    <p class="d-none d-sm-block"><a asp-controller="Subject" asp-action="index">Subjects</a> / Edit Subject</p>
                    </div>
                </div>
            </div>
    
            <div class="row">
                <div class="col-12">
                    <div class="card_body">
                        <form  asp-controller="Subject" asp-action="Edit" method="post">
                            <div class="row">
                                <div class="col-12">
                                    <h2><span>Subject Information</span></h2>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <label asp-for="Name" class="form-label">Subject Name</label>
                                    <input type="text" class="form-control" asp-for="Name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn_submit">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
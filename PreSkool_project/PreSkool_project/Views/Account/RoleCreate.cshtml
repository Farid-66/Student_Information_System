@model IdentityRole
@{
    ViewData["Title"] = "RoleCreate";
}

<main>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 page_title">
                    <div>
                        <h2>Add Role</h2>
                    <p class="d-none d-sm-block"><a asp-controller="account" asp-action="roles">Roles</a> / Add Role</p>
                    </div>
                </div>
            </div>
    
            <div class="row">
                <div class="col-12">
                    <div class="card_body">
                        <form  asp-controller="account" asp-action="rolecreate" method="post">
                            <div class="row">
                                <div class="col-12">
                                    <h2><span>Role Information</span></h2>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <label asp-for="@Model.Name" class="form-label">Role Name</label>
                                    <input type="text" class="form-control" asp-for="@Model.Name">
                                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn_submit">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>


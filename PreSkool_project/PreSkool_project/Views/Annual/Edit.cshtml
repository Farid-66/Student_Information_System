@model PreSkool_project.Models.Annual

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 page_title">
                    <div>
                        <h2>Edit Annual</h2>
                    <p class="d-none d-sm-block"><a asp-controller="Annual" asp-action="index">Annuals</a> / Edit Annual</p>
                    </div>
                </div>
            </div>
    
            <div class="row">
                <div class="col-12">
                    <div class="card_body">
                        <form asp-controller="Annual" asp-action="Edit" method="post">
                            <div class="row">
                                <div class="col-12">
                                    <h2><span>Annual Information</span></h2>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <label asp-for="Title" class="form-label">Title</label>
                                    <input asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <label asp-for="CustomUserId" class="form-label">User ID</label>
                                    <select asp-for="CustomUserId" class ="form-control" asp-items="ViewBag.CustomUserId">
                                        <option selected disabled>Select User </option>
                                    </select>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <label asp-for="Fees" class="form-label">Fees</label>
                                    <input asp-for="Fees" type="number" class="form-control" />
                                    <span asp-validation-for="Fees" class="text-danger"></span>
                                </div>
                            </div>
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn_submit">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
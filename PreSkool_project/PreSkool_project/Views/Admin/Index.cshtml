@model VmAdmin
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 page_title">
                    <div>
                        <h2>Welcome @Model.CustomUsers.Name</h2>
                        <p>Dashboard</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-3 col-sm-6 col-12">
                    <div class="breadcrumb bg_one">
                        <div class="bd-icon">
                            <i class="fas fa-user-graduate"></i>
                        </div>
                        <div class="bd-body">
                            <h3>@Model.Students.Count</h3>
                            <h6>Students</h6>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-6 col-12">
                    <div class="breadcrumb bg_tow">
                        <div class="bd-icon">
                            <i class="fas fa-chalkboard-teacher"></i>
                        </div>
                        <div class="bd-body">
                            <h3>@Model.Teachers.Count</h3>
                            <h6>Teachers</h6>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-6 col-12">
                    <div class="breadcrumb bg_three">
                        <div class="bd-icon">
                            <i class="fas fa-building"></i>
                        </div>
                        <div class="bd-body">
                            <h3>@Model.Departments.Count</h3>
                            <h6>Department</h6>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-6 col-12">
                    <div class="breadcrumb bg_four">
                        <div class="bd-icon">
                            <i class="fas fa-file-invoice-dollar"></i>
                        </div>
                        <div class="bd-body">

                        @{
                            decimal annuals = 0;
                            decimal salaries = 0;
                            decimal expeses = 0;
                            decimal revenue = 0;
                        }

                        @foreach (var item in Model.Annuals)
                        {
                            decimal fees= Convert.ToDecimal(@item.Fees);

                            annuals = annuals + fees;
                        }

                        @foreach (var item in Model.Salaries)
                        {
                            decimal amount= Convert.ToDecimal(@item.Amount);

                            salaries = salaries + amount;
                        }

                        @foreach (var item in Model.Expenses)
                        {
                            decimal amount= Convert.ToDecimal(@item.Amount);

                            expeses = expeses + amount;
                        }

                        @{
                            revenue = annuals - (expeses + salaries);
                        }

                        <h3>@revenue $</h3>
                        <h6>Revenue</h6>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row my-4">
                <div class="col-12">
                    <div class="row">
                <div class="col-12">
                    <div class="card_body">
                        <div id="table">
                            <div class="row">
                                <div class="col-12">
                                     <span class="showList">Student List</span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <table class="table" id="StudentTable">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Full Name</th>
                                                <th scope="col">Class</th>
                                                <th scope="col">DOB</th>
                                                <th scope="col">Mobil Number</th>
                                                <th scope="col">Joining Date</th>
                                                <th scope="col">Address</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        @{
                                            int s = 0;
                                        }
                                        @foreach (var item in Model.Students)
                                        {
                                            s++;
                                            <tr>
                                                <th scope="row">@s</th>
                                                <td><img src="~/Uploads/@item.StudentImage" alt=""> <a asp-controller="student" asp-action="details" asp-route-id="@item.Id"> @item.Name @item.Surname</a></td>
                                                <td>@item.Class.Name</td>
                                                <td>@item.Section.Department.Name</td>
                                                <td>@item.MobilNumber</td>
                                                <td>@item.JoiningDate.ToString("dd/MM/yyyy")</td>
                                                <td>@item.PresentAddress</td>
                                            </tr>
                                           }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                </div>

                <div class="col-12 my-4">
                    <div class="row">
                <div class="col-12">
                    <div class="card_body">
                        <div id="table">
                            <div class="row">
                                <div class="col-12">
                                    <span class="showList">Teacher List</span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <table class="table" id="TeachersTable">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Full Name</th>
                                                <th scope="col">Subject</th>
                                                <th scope="col">Mobil Number</th>
                                                <th scope="col">Joining Date</th>
                                                <th scope="col">Address</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        @{
                                            int t = 0;
                                        }
                                        @foreach (var item in Model.Teachers)
                                        {
                                            t++;
                                            <tr>
                                                <th scope="row">@t</th>
                                                <td><img src="~/Uploads/@item.TeacherImage" alt=""> <a asp-controller="teacher" asp-action="details" asp-route-id="@item.Id"> @item.Name @item.Surname</a></td>
                                                <td>@item.Subject.Name</td>
                                                <td>@item.MobilNumber</td>
                                                <td>@item.JoiningDate.ToString("dd/MM/yyyy")</td>
                                                <td>@item.Address</td>
                                            </tr>
                                           }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                </div>
            </div>

        </div>
    </main>



    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#StudentTable').DataTable({
                "pagingType": "full_numbers"
            });
            $('#TeachersTable').DataTable({
                "pagingType": "full_numbers"
            });
        });
    </script>
    
    <style>

        .dataTables_length {
            display: inline-block;
            margin-bottom: 30px;
            font-family: 'Poppins', sans-serif;
            font-weight: 500;
        }

        .dataTables_filter {
            float: right;
            font-family: 'Poppins', sans-serif;
            font-weight: 500;
        }

        .dataTables_filter label input {
            margin-left: 5px;
            border: 1px solid rgba(0, 0, 0, 0.1);
            border-radius: 50px;
            padding: 5px 10px;
            outline-offset: unset;
        }

        .dataTables_filter label input:focus-visible {
            outline: none;
        }

        .dataTables_paginate {
            float: right;
        }

        .dataTables_paginate a {
            display: inline-block;
            text-decoration: none;
            padding: 8px;
            border: 1px solid rgba(0, 0, 0, 0.3);
            color: #ffbc53;
            margin: 3px;
            border-radius: 4px;
            cursor: pointer;
            transition: all .4s ease-in-out;
        }

        .dataTables_paginate a:hover {
            background-color: #ffbc53;
            color: white;
            border-color: #ffbc53;
        }

        .dataTables_info {
            display: inline-block;
            margin: 15px 0px;
            font-family: 'Poppins', sans-serif;
            font-weight: 500;
        }

        .sorting{
            position: relative;
        }

        .sorting::before {
            right: 1em;
            content: "\2191";
            position: absolute;
            left: -7px;
            opacity: 0.4;
        }
        .sorting::after{
            right: 0.5em;
            content: "\2193";
            position: absolute;
            left: 0px;
            opacity: 0.4;
        }
        .sorting_desc::after {
            opacity: 1;
         }

         .sorting_desc::before {
            opacity: 1;
         }
    </style>